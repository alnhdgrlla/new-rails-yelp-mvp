<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @restaurant.name %></h1>
        <table border="1">
          <tr>
            <th>Address</th><th>Phone Number</th><th>Category</th>
          </tr>
          <tr>
            <th><%= @restaurant.address %></th><th><%= @restaurant.phone_number %></th><th><%= @restaurant.category %></th>
          </tr>
        </table>

        <h3>Reviews</h3>

        <%  @restaurant.reviews.each do |review|%>
        <ul>
          <li>comment:<%= review.content %> / rating:<%= review.rating %></li>
        </ul>
        <% end  %>

        <h3>Add review</h3>
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating, collection: 0..5%>
          <%= f.submit "add a review", class: "btn btn-primary" %>
        <% end %>
        <%= link_to "Go back to home", restaurants_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
